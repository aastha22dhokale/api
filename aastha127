        String sql = """
        UPDATE DD_ACCOUNT_TBL 
        SET ORG_NUMBER = ?, UPDATED_TIME = ? 
        WHERE DD_UUID = ?
    """;
        jdbcTemplate.update(sql, externalId, Timestamp.from(Instant.now()), uuid);
    }


